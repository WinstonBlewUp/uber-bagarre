{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-10 bg-white p-6 rounded-lg shadow-md">
        <h1 class="text-2xl font-bold mb-4">Connexion</h1>
        {% if error %}
            <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <form method="post">
            <div class="mb-4">
                <label for="username" class="block font-semibold">Email</label>
                <input type="email" id="username" name="_username" class="w-full border p-2 rounded" value="{{ last_username }}" required autofocus>
            </div>
            <div class="mb-4">
                <label for="password" class="block font-semibold">Mot de passe</label>
                <input type="password" id="password" name="_password" class="w-full border p-2 rounded" required>
            </div>
            <button type="submit" class="btn btn-primary">Se connecter</button>
        </form>
    </div>
{% endblock %}
